<Window x:Class="ScriptGeneratorAVS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScriptGeneratorAVS"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Tools">
                    <MenuItem Header="_SetupDLL" Click="MenuItem_Click" />
                    <MenuItem Header="_Open" />
                    <MenuItem Header="_Save" />
                    <Separator />
                    <MenuItem Header="_Exit" />
                </MenuItem>
            </Menu>
            <TextBox AcceptsReturn="True" />
        </DockPanel>
        <Grid>
            <TextBox x:Name="txtVideoUrl" HorizontalAlignment="Left" Height="23" Margin="39,152,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="201"/>
            <Label Content="Video" HorizontalAlignment="Left" Height="33" Margin="34,119,0,0" VerticalAlignment="Top" Width="206" FontSize="20"/>
            <Button x:Name="btnFindVideo" Content="Find" HorizontalAlignment="Left" Height="23" Margin="256,152,0,0" VerticalAlignment="Top" Width="44" RenderTransformOrigin="0.768,0.507" Click="BtnFindVideo_Click"/>
            <Label x:Name="lblSubs" Content="Subtitles" HorizontalAlignment="Left" Height="33" Margin="34,198,0,0" VerticalAlignment="Top" Width="206" FontSize="20"/>
            <Button x:Name="btnFindSubs" Content="Find" HorizontalAlignment="Left" Height="23" Margin="256,231,0,0" VerticalAlignment="Top" Width="44" RenderTransformOrigin="0.768,0.507" Click="BtnFindSubs_Click"/>
            <ListBox x:Name="lbSubs" HorizontalAlignment="Left" Height="74" Margin="39,236,0,0" VerticalAlignment="Top" Width="212"/>
            <Button x:Name="btnBuild" Content="Build" HorizontalAlignment="Left" Margin="716,428,0,0" VerticalAlignment="Top" Width="66" Height="31" Click="BtnBuild_Click"/>


        </Grid>
    </Grid>
</Window>
