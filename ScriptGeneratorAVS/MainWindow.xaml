<Window x:Class="ScriptGeneratorAVS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScriptGeneratorAVS"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" Closed="Window_Closed" Closing="Window_Closed">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Tools">
                    <MenuItem Header="_SetupDLL" Click="MenuItem_Click" />
                    <Separator />
                    <MenuItem Header="_Exit" Click="Window_Closed" />
                </MenuItem>
            </Menu>
            <TextBox AcceptsReturn="True" />
        </DockPanel>
        <Grid>
            <TextBox x:Name="txtVideoUrl" HorizontalAlignment="Left" Height="39" Margin="39,152,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="212" Focusable="False"/>
            <Label Content="Video" HorizontalAlignment="Left" Height="33" Margin="34,119,0,0" VerticalAlignment="Top" Width="206" FontSize="20"/>
            <Button x:Name="btnFindVideo" Content="Find" HorizontalAlignment="Left" Height="23" Margin="256,152,0,0" VerticalAlignment="Top" Width="44" RenderTransformOrigin="0.768,0.507" Click="BtnFindVideo_Click"/>
            <Label x:Name="lblSubs" Content="Subtitles" HorizontalAlignment="Left" Height="33" Margin="34,214,0,0" VerticalAlignment="Top" Width="206" FontSize="20"/>
            <Button x:Name="btnFindSubs" Content="+" HorizontalAlignment="Left" Height="18" Margin="256,252,0,0" VerticalAlignment="Top" Width="19" RenderTransformOrigin="0.768,0.507" Click="BtnFindSubs_Click"/>
            <ListBox x:Name="lbSubs" HorizontalAlignment="Left" Height="74" Margin="39,252,0,0" VerticalAlignment="Top" Width="212"/>
            <Button x:Name="btnBuild" Content="Build" HorizontalAlignment="Left" Margin="716,428,0,0" VerticalAlignment="Top" Width="66" Height="31" Click="BtnBuild_Click"/>
            <Label x:Name="lblEffects" Content="Effects" HorizontalAlignment="Left" Height="33" Margin="457,114,0,0" VerticalAlignment="Top" Width="206" FontSize="20"/>
            <Button x:Name="btnEffects" Content="+" HorizontalAlignment="Left" Height="23" Margin="679,154,0,0" VerticalAlignment="Top" Width="26" RenderTransformOrigin="0.768,0.507" Click="btnEffects_Click"/>
            <ListBox x:Name="lbEffects" HorizontalAlignment="Left" Height="158" Margin="462,152,0,0" VerticalAlignment="Top" Width="212"/>
            <Button x:Name="btnRemoveSubs" Content="-" HorizontalAlignment="Left" Height="19" Margin="256,275,0,0" VerticalAlignment="Top" Width="19" RenderTransformOrigin="0.768,0.507" Click="btnRemoveSubs_Click"/>
            <Button x:Name="btnClearSubs" Content="Clear" HorizontalAlignment="Left" Height="23" Margin="256,299,0,0" VerticalAlignment="Top" Width="44" RenderTransformOrigin="0.768,0.507" Click="btnClearSubs_Click"/>
            <CheckBox x:Name="cbSound" Content="Sound" HorizontalAlignment="Left" Height="18" Margin="39,196,0,0" VerticalAlignment="Top" Width="74" Click="cbSound_Click" RenderTransformOrigin="0.5,2.556"/>
            <Button x:Name="btnEffectRemove" Content="-" HorizontalAlignment="Left" Height="23" Margin="679,182,0,0" VerticalAlignment="Top" Width="26" RenderTransformOrigin="0.768,0.507" Click="btnEffectRemove_Click" />
            <Button x:Name="btnEffectsClear" Content="Clear" HorizontalAlignment="Left" Height="23" Margin="679,214,0,0" VerticalAlignment="Top" Width="44" RenderTransformOrigin="0.768,0.507" Click="btnEffectsClear_Click" />


        </Grid>
    </Grid>
</Window>
